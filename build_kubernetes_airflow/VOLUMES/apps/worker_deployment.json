{
  "apiVersion": "apps/v1",
  "kind": "Deployment",
  "metadata":{
    "name": "spark-worker-__APP-ID__",
    "labels":{
      "app": "spark-worker-__APP-ID__"
    }
  },
  "spec": {
    "replicas" : 1,
    "selector": {
      "matchLabels" : {
        "app": "spark-worker-__APP-ID__"
      }
    },
    "template" : {
      "metadata" : {
        "labels" : {
          "app": "spark-worker-__APP-ID__"
        }
      },
      "spec":{
        "containers":[
          {
            "name": "spark-worker-__APP-ID__",
            "image": "sanmuk21/sdh-spark-kubernetes:1.0.2.4",
            "resources": {
              "limits": {
                "cpu": "1000m",
                "memory": "1000Mi"
              },
              "requests": {
                "cpu": "1000m",
                "memory": "1000Mi"
              }
            },
            "volumeMounts": [
              {
                "name": "spark-history-volume",
                "mountPath": "/spark-history"
              }
            ],  
            "env": [
              {
                "name": "MASTER_SPARK",
                "value": "spark-master-__APP-ID__"
              },
              {
                "name": "MASTER_SPARK_PORT",
                "value": "7700"
              }
            ],
            "command": [ "/sdh/spark2/sbin/start-worker-noautostop" ]
          }
        ],
        "volumes": [
          {
            "name": "spark-history-volume",
            "persistentVolumeClaim": {
              "claimName": "spark-history-volume-claim"
            }
          }
        ]        
      }
    }
  }
}
